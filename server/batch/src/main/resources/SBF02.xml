<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="cdicF02IFileReader" class="org.springframework.batch.item.file.FlatFileItemReader">
        <property name="resource">
            <bean class="org.springframework.core.io.FileSystemResource">
                <constructor-arg value="z:/input/CDICF02I.txt"></constructor-arg>
            </bean>
        </property>
        <property name="lineMapper">
            <bean class="org.springframework.batch.item.file.mapping.DefaultLineMapper">
                <property name="fieldSetMapper">
                    <bean class="org.springframework.batch.item.file.mapping.BeanWrapperFieldSetMapper">
                        <property name="targetType" value="tw.com.citi.cdic.batch.model.CDICF02"></property>
                        <property name="customEditors">
                            <map>
                                <entry key="java.util.Date">
                                    <bean class="org.springframework.beans.propertyeditors.CustomDateEditor">
                                        <constructor-arg>
                                            <bean class="java.text.SimpleDateFormat">
                                                <constructor-arg value="yyyyMMdd"></constructor-arg>
                                            </bean>
                                        </constructor-arg>
                                    </bean>
                                </entry>
                            </map>
                        </property>
                    </bean>
                </property>
                <property name="lineTokenizer">
                    <bean class="org.springframework.batch.item.file.transform.FixedLengthTokenizer">
                        <property name="columns" value="1,4,8,38,44,50,58,62,73,76,79,87,90,106,122,137,152,153,154,170,178,193,194,195,210,225"></property>
                        <property name="names" value="unit,branchNo,srNo,apNo,charCode,status,customerId,customerIdNo,customerType,openDate,currencyCode,accountBalance,balance,stopPayment,cardAmount,gsAccountCode,jointCode,rateType,intRate,intPayable,overdrawStatus,taxCode,grossInt,grossTax,lastTxDate"></property>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="a21FileWriter" class="org.springframework.batch.item.file.FlatFileItemWriter">
        <property name="resource">
            <bean class="org.springframework.core.io.FileSystemResource">
                <constructor-arg value="z:/A21.txt"></constructor-arg>
            </bean>
        </property>
        <property name="lineAggregator">
            <bean class="org.springframework.batch.item.file.transform.FormatterLineAggregator">
                <property name="format" value="%3s%4s%30s%6s%6s%8s%4s%11s%3s%3s%tY%\u003ctm%\u003ctd%3s%16.2f%16.2f%15.2f%15.2f%1s%1s%16s%8.5f%15.2f%1s%1s%15.2f%15.2f%tY%\u003ctm%\u003ctd"></property>
                <property name="fieldExtractor">
                    <bean class="org.springframework.batch.item.file.transform.BeanWrapperFieldExtractor">
                        <property name="names" value="unit,branchNo,srNo,apNo,charCode,status,customerId,customerIdNo,customerType,openDate,currencyCode,accountBalance,balance,stopPayment,cardAmount,gsAccountCode,jointCode,rateType,intRate,intPayable,overdrawStatus,taxCode,grossInt,grossTax,lastTxDate"></property>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="cdicF02RFileReader" parent="cdicF02IFileReader">
        <property name="resource">
            <bean class="org.springframework.core.io.FileSystemResource">
                <constructor-arg value="z:/input/CDICF02R.zip"></constructor-arg>
            </bean>
        </property>
    </bean>

    <bean id="b21Processor" class="tw.com.citi.cdic.batch.item.SBF02Processor">
        <property name="b21" value="true"></property>
    </bean>

    <bean id="b21FileWriter" parent="a21FileWriter">
        <property name="resource">
            <bean class="org.springframework.core.io.FileSystemResource">
                <constructor-arg value="z:/B21.txt"></constructor-arg>
            </bean>
        </property>
    </bean>

    <bean id="c21Processor" class="tw.com.citi.cdic.batch.item.SBF02Processor">
        <property name="b21" value="false"></property>
    </bean>

    <bean id="c21FileWriter" parent="a21FileWriter">
        <property name="resource">
            <bean class="org.springframework.core.io.FileSystemResource">
                <constructor-arg value="z:/C21.txt"></constructor-arg>
            </bean>
        </property>
    </bean>

</beans>
